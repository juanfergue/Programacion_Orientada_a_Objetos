package datos;
import java.util.ArrayList;
import java.util.List;

public class Datos {

	private List<Double>datos;
	private List<String>errores;
	private double min;
	private double max;
	
	public Datos(String[] d, double max, double min) {
		this.min = min;
		this.max = max;
		this.datos = new ArrayList<>();
		this.errores = new ArrayList<>();
		procesarDatos(d);
	}
	
	public void procesarDatos(String[] d) {
		for(String dato : d) {
			try {
				datos.add(Double.parseDouble(dato));
			}catch(Exception e) {
				errores.add(dato);
			}
		}
	}
	
	public double calcMedia() {
		double suma = 0;
		int contador = 0;
		for (double x : datos) {
			if (min <= x && x <= max) {
			suma += x;
			++contador;
			}
		}
		if(contador==0) {
			throw new DatosException("No hay datos en el rango especificado");
		}
		return suma/contador;
	}
	
	public double calcDesvTipica() {
		double media = this.calcMedia();
		int contador = 0;
		double suma = 0;
		for(double i : datos) {
			if(i <= max && i >= min) {
				suma += Math.pow(i - media,2);
				contador++;
			}
		}
		return Math.sqrt(suma/contador);
	}
	
	
	public List<Double> getDatos() {
		return datos;
	}
	
	public List<String> getErrores(){
		return errores;
	}
	public void setRango(String rango) {
		try {
			int idx = rango.indexOf(";");
			if(idx == -1) {
				throw new DatosException("Error en los datos al establecer el rango");
			}
			this.min = Double.parseDouble(rango.substring(0, idx));
			this.max = Double.parseDouble(rango.substring(idx + 1));
		}catch(NumberFormatException e) {
			throw new DatosException("Error en los datos al establecer el rango");
		}
	}
	
	@Override
	public String toString() {
		String str = "Min: "+min+", Max: "+max+",\n";
		str += "\n";
		str += datos.toString();
		str += ",";
		str += errores.toString();
		str +=",";
		
		try {
			str += "Media: " + calcMedia();
		}catch(Exception e) {
			str += "Media: " + "ERROR ,";
		}
		
		try {
			str+= "DesvTipica: " + calcDesvTipica();
		}catch(Exception e) {
			str+= "DesvTipica: " + "ERROR";
		}
		return str;
	}
}


